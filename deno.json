{
  "tasks": {
    "build": "deno run -A scripts/build.ts",
    "dev": "deno run -A npm:vite",
    "preview": "deno run -A npm:vite preview"
  },
  "nodeModulesDir": "auto",
  "imports": {
    "esbuild": "npm:esbuild@0.20.2",
    "@luca/esbuild-deno-loader": "jsr:@luca/esbuild-deno-loader@0.10.3",
    "rxjs": "https://esm.sh/rxjs@^7.8.2?conditions=es2015",
    "rxjs/": "https://esm.sh/rxjs@^7.8.2/",
    "@angular/compiler": "https://esm.sh/@angular/compiler@21.0.8",
    "@angular/core": "https://esm.sh/@angular/core@21.0.8",
    "@google/genai": "https://esm.sh/@google/genai@1.35.0",
    "@angular/platform-browser": "https://esm.sh/@angular/platform-browser@21.0.8",
    "@angular/common": "https://esm.sh/@angular/common@21.0.8",
    "@angular/forms": "https://esm.sh/@angular/forms@21.0.8",
    "@angular/router": "https://esm.sh/@angular/router@21.0.8"
